<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="abc" extends="struts-default">

        <result-types>

            <result-type name="json" class="org.apache.struts2.json.JSONResult">

                <param name="noCache">true</param>

                <param name="excludeNullProperties">true</param>

                <param name="enableGZIP">true</param>

            </result-type>

        </result-types>

        <!-- LOGIN ACTION -->

        <action name="login">

            <result>login.jsp</result>

        </action>

        <!-- verify user login credentials -->

        <action name="loginProcess" class="action.login.Login" method="executeLogin">

            <result name="success">login_success.jsp</result>

            <result name="error">login_error.jsp</result>

        </action>

        <!-- LOGOUT ACTION -->

        <action name="logoutProcess" class="action.logout.Logout" method="executeLogout">

            <result name="success">logout_success.jsp</result>

        </action>

        <!-- SIGN UP ACTION -->

        <action name="signUp">

            <result>signUp.jsp</result>

        </action>

        <!-- enter data into user table -->

        <action name="signUpProcess" class="action.signup.SignUp" method="executeSignUp">

            <result name="success">signUp_success.jsp</result>

            <result name="error">signUp_error.jsp</result>

        </action>

        <!-- DISCOVERY ACTION -->

        <action name="discover">

            <result>discovery.jsp</result>

        </action>

        <!-- enter data into discovery table -->

        <action name="discoveryProcess" class="action.discover.Discovery" method="executeDiscovery">

            <result name="success">discovery.jsp</result>

            <result name="error">discovery_error.jsp</result>

        </action>

        <action name="discoveryTable" class="action.discover.Discovery" method="getDiscoverData">

            <result name="success" type="json" />

        </action>

        <action name="reDiscoveryProcess" class="action.discover.Discovery" method="executeReDiscovery">

            <result name="success">discovery.jsp</result>

            <result name="error">discovery_error.jsp</result>

        </action>

        <!-- discover delete action -->

        <action name="discoveryDelete" class="action.discover.Discovery" method="deleteDiscoverData">

            <result name="success">discovery.jsp</result>

            <result name="error">discovery_error.jsp</result>

        </action>

        <!-- MONITOR ACTION -->

        <action name="monitor">

            <result>monitor.jsp</result>

        </action>

        <!-- monitor button action -->

        <action name="monitorTable" class="action.monitor.Monitor" method="getMonitorData">

            <result name="success" type="json" />

        </action>

        <action name="monitorForm" class="action.monitor.Monitor" method="getMonitorForm">

            <result name="success" type="json" />

        </action>

        <action name="monitorProcess" class="action.monitor.Monitor" method="provisionMonitor">

            <result name="success">discovery.jsp</result>

            <result name="error" type="json" />

        </action>

        <action name="monitorPolling" class="action.monitor.Monitor" method="getPolling">

            <result name="success">dashboard.jsp</result>

            <result name="error">linux_dashboard.jsp</result>

        </action>

        <!-- DASHBOARD ACTION -->

        <action name="dashboard">

            <result name="success">dashboard.jsp</result>

            <result name="error">linux_dashboard.jsp</result>

        </action>

        <action name="dashboardProcess" class="action.dashboard.Dashboard" method="executeDashboard">

            <result name="success">dashboard.jsp</result>

            <result name="error">linux_dashboard.jsp</result>

        </action>

        <action name="dashboardTable" class="action.dashboard.Dashboard" method="getDashboardData">

            <result name="success" type="json" />

        </action>

        <!-- PROFILE ACTION -->

        <action name="profile" class="action.profile.Profile" method="executeProfile">

            <result name="success">profile_success.jsp</result>

            <result name="error">profile_error.jsp</result>

        </action>

    </package>

</struts>